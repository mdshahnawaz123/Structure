<Window x:Class="Structure.UI.ChatGPTWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatGPT Assistant"
        Height="450" Width="600"
        Background="#FFFAFAFA" WindowStartupLocation="CenterScreen">

    <Grid>
        <!-- Main layout using Grid Row definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Output Area -->
            <RowDefinition Height="Auto" />
            <!-- Input Area -->
            <RowDefinition Height="Auto" />
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Output Display Box -->
        <ScrollViewer Grid.Row="0" Margin="10" VerticalScrollBarVisibility="Auto">
            <TextBox Name="ResponseBox"
                     TextWrapping="Wrap"
                     IsReadOnly="True"
                     BorderThickness="0"
                     Background="White"
                     FontSize="14"
                     VerticalScrollBarVisibility="Auto"
                     AcceptsReturn="True"/>
        </ScrollViewer>

        <!-- Input Area -->
        <DockPanel Grid.Row="1" Margin="10" LastChildFill="True">
            <TextBox Name="InputBox"
                     Height="60"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     VerticalContentAlignment="Center"
                     FontSize="14"
                     MaxWidth="450"
                     Margin="0,0,10,0" Width="450"/>

            <Button Content="Send"
                    Width="80"
                    Height="60"
                    Click="AskGPT_Click"
                    Background="#FF007ACC"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderBrush="Transparent"
                    Cursor="Hand"
                    HorizontalAlignment="Right"/>
        </DockPanel>



        <!-- Footer -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
            <TextBlock Text="Powered by BIM Digital Design | " FontSize="12" Foreground="Gray" VerticalAlignment="Center"/>
            <TextBlock FontSize="12" VerticalAlignment="Center">
                <Hyperlink NavigateUri="mailto:bimdigitaldesign@gmail.com" RequestNavigate="Hyperlink_RequestNavigate">
                    bimdigitaldesign@gmail.com
                </Hyperlink>
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
