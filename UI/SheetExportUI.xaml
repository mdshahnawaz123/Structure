<Window x:Class="Structure.UI.SheetExportUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sheet Export"
        Height="600" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White">

    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Margin="0,0,15,0">

            <!-- Title -->
            <TextBlock Text="Sheet Export Tool"
                       FontSize="20"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"/>

            <!-- Save Location -->
            <Button Name="SaveButton"
                Click="SaveLocation"
                    Content="Pick Save Location"
                    Background="#2D89EF"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35"
                    Margin="0,0,0,10" x:FieldModifier="public" />

            <!-- Select All Checkbox -->
            <CheckBox Content="Select All Sheets" Checked="SelectAll_Checked" Unchecked="SelectAll_Unchecked" Margin="0,10,0,0"/>

            <!-- Sheet Selection with Checkboxes -->
            <TextBlock Text="Select Sheets:" Margin="0,5,0,2"/>
            <ListBox Name="SheetSelector" BorderBrush="#CCC" BorderThickness="1" Height="150">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Export Formats -->
            <TextBlock Text="Export Formats:" Margin="0,10,0,2"/>
            <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                <CheckBox Name="PDFFormat" Content="PDF"/>
                <CheckBox Name="CADFormat" Content="CAD"/>
                <CheckBox Name="DWGFormat" Content="DWG"/>
            </StackPanel>

            <!-- Export Button -->
            <Button Name="Export"
                    Content="Export Sheets"
                    Background="#2D89EF"
                    Foreground="White"
                    FontWeight="Bold"
                    Height="35"
                    Margin="0,20,0,10"
                    Click="Export_Click"/>

            <!-- Footer -->
            <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,30,0,0">
                <TextBlock Text="Powered by BIM Digital Design"
                           FontSize="10"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="bimdigitaldesign@gmail.com"
                           FontSize="10"
                           Foreground="Blue"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
