<Window x:Class="Structure.UI.PCCUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Foundation PCC"
        Height="320"
        Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F4F7FB"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Margin" Value="10,5,10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel Margin="20">

        <!-- Footer at absolute bottom -->
        <StackPanel DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBlock FontSize="12" FontWeight="Bold" Foreground="#2C3E50" Text="Powered by BIM Digital Design" TextAlignment="Center"/>
            <TextBlock FontSize="11" Foreground="SlateGray" TextAlignment="Center">
                <Hyperlink NavigateUri="mailto:bimdigitaldesign@gmail.com"
                           RequestNavigate="Hyperlink_RequestNavigate"
                           Foreground="DarkSlateBlue"
                           TextDecorations="Underline">
                    bimdigitaldesign@gmail.com
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button x:Name="SelectFoundation"
                    Content="Pick Foundation"
                    Style="{StaticResource StyledButton}"
                    Click="SelectFoundation_OnClick"/>

            <Button x:Name="PCC"
                    Content="Create PCC"
                    Style="{StaticResource StyledButton}"
                    Click="CreatePCC"/>
        </StackPanel>

        <!-- Main Form Content -->
        <Border Background="White" Padding="20" CornerRadius="8">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Stretch" VerticalAlignment="Center">

                <TextBlock Text="Foundation PCC Setup"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#2E3A59"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="PCC Type" Width="180" VerticalAlignment="Center"/>
                    <ComboBox x:Name="PCCType" Width="160" Height="28"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <Label Content="Offset (mm)" Width="180" VerticalAlignment="Center"/>
                    <TextBox x:Name="PCCOfset" Width="160" Height="28"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </DockPanel>
</Window>
