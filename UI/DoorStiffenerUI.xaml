<Window x:Class="Structure.UI.DoorStiffenerUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Structure.UI"
        mc:Ignorable="d" 
        Title="Door Stiffener" Height="680" Width="400" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#FFFAFAFA">

    <Grid>
        <Border Background="White" Padding="20" CornerRadius="5" Margin="20" BorderBrush="#CCC" BorderThickness="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="280" >

                <!-- Header -->
                <TextBlock Text="Door Stiffener Tool" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           HorizontalAlignment="Center" 
                           Margin="0,0,0,20"/>

                <!-- Offset -->
                <TextBlock Text="Offset (mm):" FontWeight="SemiBold"/>
                <TextBox Name="OffsetInput" Height="30" Margin="0,5,0,10"/>

                <!-- One Structural Column Parallel -->
                <CheckBox Name="ColumnCheckBox" 
                          Content="Structural Column" 
                          Margin="0,0,0,15" 
                          FontWeight="SemiBold"/>

                <!-- Column Type -->
                <TextBlock Text="Column Type:" FontWeight="SemiBold"/>
                <ComboBox Name="ColumnTypeComboBox" Height="30" Margin="0,5,0,15"/>

                <!-- Door Type -->
                <TextBlock Text="Door Type:" FontWeight="SemiBold"/>
                <ComboBox Name="DoorTypeComboBox" Height="30" Margin="0,5,0,15"/>

                <!-- Bottom Level -->
                <TextBlock Text="Bottom Level:" FontWeight="SemiBold"/>
                <ComboBox Name="BottomLevelComboBox" Height="30" Margin="0,5,0,15"/>

                <!-- Top Level -->
                <TextBlock Text="Top Level:" FontWeight="SemiBold"/>
                <ComboBox Name="TopLevelComboBox" Height="30" Margin="0,5,0,15"/>

                <!-- Select Doors Button -->
                <Button Name="SelectDoorsButton" Content="Select Doors"
                        Click="SelectDoor"
                        Background="#0078D7" Foreground="White" Height="35"
                        FontWeight="Bold" Margin="0,0,0,10" BorderThickness="0" />

                <!-- Create Stiffeners Button -->
                <Button Name="CreateStiffenersButton" Content="Create Stiffeners"
                        Click="CreateStiffener"
                        Background="#28A745" Foreground="White" Height="35"
                        FontWeight="Bold" BorderThickness="0"/>

                <!-- Footer -->
                <StackPanel Margin="0,30,0,0" HorizontalAlignment="Center">
                    <TextBlock Text="Powered by BIM Digital Design" 
                               FontSize="12" HorizontalAlignment="Center"/>
                    <TextBlock FontSize="12" HorizontalAlignment="Center">
                        <Hyperlink NavigateUri="mailto:bimdigitaldesign@gmail.com" RequestNavigate="Hyperlink_RequestNavigate">
                            bimdigitaldesign@gmail.com
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
