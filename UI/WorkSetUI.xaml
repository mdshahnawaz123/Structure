<Window x:Class="Structure.UI.WorkSetUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Structure.UI"
        mc:Ignorable="d"
        Title="WorkSet Assignment"
        Height="450" Width="400"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="Segoe UI">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Category -->
            <RowDefinition Height="Auto"/>
            <!-- Element Type -->
            <RowDefinition Height="Auto"/>
            <!-- WorkSet -->
            <RowDefinition Height="Auto"/>
            <!-- Button -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0"
                   Text="WorkSet Configuration Tool"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="#2E3A59"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,20"/>

        <!-- Select Category -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Select Category:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <ComboBox x:Name="CategoryComboBox"
                      Height="32"
                      Background="White"/>
        </StackPanel>

        <!-- Select Element Type -->
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Select Element Type:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <ComboBox x:Name="ElementTypeComboBox"
                      Height="32"
                      Background="White"/>
        </StackPanel>

        <!-- Select WorkSet -->
        <StackPanel Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Select WorkSet:" Margin="0,0,0,5" FontWeight="SemiBold"/>
            <ComboBox x:Name="WorkSetComboBox"
                      Height="32"
                      Background="White"/>
        </StackPanel>

        <!-- Assign Button -->
        <Button Grid.Row="5"
                Content="Assign"
                Click="AssignBtn"
                Width="120" Height="36"
                Background="#0078D7"
                Foreground="White"
                FontWeight="SemiBold"
                HorizontalAlignment="Center"
                Cursor="Hand"
                Margin="0,10,0,10"
                BorderThickness="0"/>

        <!-- Footer -->
        <!-- Footer -->
        <StackPanel Grid.Row="7" Margin="0,20,0,10" HorizontalAlignment="Center">
            <TextBlock Text="Powered by BIM Digital Design"
                       FontSize="12"
                       FontStyle="Italic"
                       Foreground="Gray"
                       TextAlignment="Center"
                       HorizontalAlignment="Center"/>

            <TextBlock FontSize="12"
                       FontStyle="Italic"
                       HorizontalAlignment="Center"
                       TextAlignment="Center">
                <TextBlock.Resources>
                    <Style TargetType="Hyperlink">
                        <Setter Property="Foreground" Value="Gray"/>
                        <Setter Property="TextDecorations" Value="None"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#0078D7"/>
                                <Setter Property="TextDecorations" Value="Underline"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </TextBlock.Resources>

                <Hyperlink NavigateUri="mailto:bimdigitaldesign@gmail.com"
                           RequestNavigate="Hyperlink_RequestNavigate"
                           Cursor="Hand">
                    bimdigitaldesign@gmail.com
                </Hyperlink>
            </TextBlock>
        </StackPanel>


    </Grid>
</Window>
