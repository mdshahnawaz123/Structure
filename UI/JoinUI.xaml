<Window x:Class="Structure.UI.JoinUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Join Elements"
        Height="400"
        Width="460"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F2F2F2"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- Style for clickable email hyperlink -->
        <Style TargetType="Hyperlink" x:Key="HyperlinkStyle">
            <Setter Property="Foreground" Value="Gray"/>
            <Setter Property="TextDecorations" Value="None"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#0078D7"/>
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Border Margin="20"
                Padding="25"
                Background="White"
                CornerRadius="10">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">

                <TextBlock Text="Join/Unjoin Elements by Category"
                           FontSize="18"
                           FontWeight="Bold"
                           Foreground="#2E3A59"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="1st Element Category" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CBCategory1" Height="30" />
                </StackPanel>

                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="2nd Element Category" FontWeight="SemiBold"/>
                    <ComboBox x:Name="CBCategory2" Height="30" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Button x:Name="Join" Content="Join" Width="90" Height="32" Margin="5" Click="Join_OnClick"/>
                    <Button x:Name="UnJoin" Content="UnJoin" Width="90" Height="32" Margin="5" Click="UnJoin_OnClick"/>
                    <Button x:Name="SwitchJoinOrder" Content="Switch Order" Width="100" Height="32" Margin="5" Click="SwitchJoinOrder_OnClick"/>
                </StackPanel>

                <!-- Footer -->
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="Powered by BIM Digital Design"
                               FontSize="12"
                               FontStyle="Italic"
                               Foreground="Gray"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>

                    <TextBlock FontSize="12"
                               FontStyle="Italic"
                               HorizontalAlignment="Center"
                               TextAlignment="Center">
                        <Hyperlink NavigateUri="mailto:bimdigitaldesign@gmail.com"
                                   RequestNavigate="Hyperlink_RequestNavigate"
                                   Cursor="Hand"
                                   Style="{StaticResource HyperlinkStyle}">
                            bimdigitaldesign@gmail.com
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>