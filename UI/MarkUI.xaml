<Window x:Class="Structure.UI.MarkUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mark Automation" Height="500" Width="350" Background="White" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Title -->
            <RowDefinition Height="Auto"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Element Type -->
            <RowDefinition Height="Auto"/>
            <!-- Data Type -->
            <RowDefinition Height="Auto"/>
            <!-- Prefix -->
            <RowDefinition Height="20"/>
            <!-- Spacer -->
            <RowDefinition Height="Auto"/>
            <!-- Create Tag Button -->
            <RowDefinition Height="Auto"/>
            <!-- Footer -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Tag Generator" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,10"/>

        <!-- Element Type -->
        <StackPanel Grid.Row="2" Margin="0,10">
            <TextBlock Text="Element Type:" Margin="0,0,0,5"/>
            <ComboBox Height="30" Name="ElementTypeCombbox" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Data Type -->
        <StackPanel Grid.Row="3" Margin="0,10">
            <TextBlock Text="Data Type:" Margin="0,0,0,5"/>
            <ComboBox Height="30" Name="DataTypeCombbox" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Prefix -->
        <StackPanel Grid.Row="4" Margin="0,10">
            <TextBlock Text="Prefix:" Margin="0,0,0,5" VerticalAlignment="Center"/>
            <TextBox Name="TextBox" Height="30" VerticalAlignment="Center" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        </StackPanel>

        <!-- Create Tag Button -->
        <Button Grid.Row="6" Content="Create Tag"
                Background="Green" Foreground="White"
                Height="40" Margin="0,20,0,10"
                FontWeight="Bold" 
                Click="TagCreate"/>

        <!-- Footer -->
        <StackPanel Grid.Row="7" HorizontalAlignment="Center" Margin="0,10">
            <TextBlock Text="Powered by BIM Digital Design" 
                       FontSize="12" Foreground="Gray" 
                       HorizontalAlignment="Center"/>
            <TextBlock Text="bimdigitaldesign@gmail.com" 
                       FontSize="12" Foreground="Blue" 
                       TextDecorations="Underline"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
