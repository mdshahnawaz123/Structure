<Window x:Class="Structure.UI.FloorUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Structure.UI"
        mc:Ignorable="d" 
        Title="Floor Configuration" Height="460" Width="350"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="White">

    <Grid Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

            <!-- Title -->
            <TextBlock Text="Floor Configuration Tool" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="#2E3A59" TextAlignment="Center"
                       Margin="0,0,0,20"/>

            <!-- Pick CAD Layer Button -->
            <Button Content="Pick a CAD Layer" 
                    Background="#3498db" Foreground="White" 
                    FontWeight="Bold" Padding="8" 
                    Margin="0,0,0,20" BorderThickness="0" 
                    Cursor="Hand" Click="PickCadLayer_OnClick"/>

            <!-- Layer Name -->
            <TextBlock Text="CAD Layer Name:" FontWeight="SemiBold"/>
            <ComboBox Name="LayerNameComboBox" Height="30" Margin="0,5,0,15"/>

            <!-- Slab Type -->
            <TextBlock Text="Slab Type:" FontWeight="SemiBold"/>
            <ComboBox x:Name="SlabTypeComboBox" Height="30" Margin="0,5,0,15"/>

            <!-- Reference Level -->
            <TextBlock Text="Reference Level:" FontWeight="SemiBold"/>
            <ComboBox Name="ReferenceLevelComboBox" Height="30" Margin="0,5,0,15"/>

            <!-- Create Slab Button -->
            <Button Content="Create Slab" 
                    Background="#2980b9" Foreground="White" 
                    FontWeight="Bold" Padding="10" 
                    BorderThickness="0" Cursor="Hand"
                    Margin="0,10,0,20" Click="CreateSlab_OnClick"/>

            <!-- Footer -->
            <!-- Footer -->
            <StackPanel HorizontalAlignment="Center">
                <TextBlock Text="Powered by BIM Digital Design" 
                           FontSize="10" Foreground="Gray" TextAlignment="Center"/>
                <TextBlock FontSize="10" TextAlignment="Center">
                    <Hyperlink NavigateUri="mailto:bimdigitaldesign@gmail.com" 
                               RequestNavigate="Hyperlink_RequestNavigate">
                        <Hyperlink.Style>
                            <Style TargetType="Hyperlink">
                                <Setter Property="Foreground" Value="Gray"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Foreground" Value="DarkRed"/> <!-- Hover color -->
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Hyperlink.Style>
                        bimdigitaldesign@gmail.com
                    </Hyperlink>
                </TextBlock>
            </StackPanel>


        </StackPanel>
    </Grid>
</Window>
